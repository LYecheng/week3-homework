<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<h1>Chicago</h1>

<ul>
    <p><a href="/places/new">Add A New Place</a></p>

    <% @places.each do |place| %>
    <li>
        <%= link_to place.title, "/places/#{place.id}" %> 
        (<%= number_to_currency(place[:admission_price], precision: 2) %>) 
        <%= link_to "delete", "/places/#{place.id}/delete" %>
    </li>
    <% end %>
</ul>